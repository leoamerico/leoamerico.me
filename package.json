{
  "name": "leoamerico.me",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.3",
  "engines": {
    "bun": ">=1.0.0"
  },
  "scripts": {
    "preinstall": "node -e \"const ua=process.env.npm_config_user_agent||'';if(!ua.startsWith('bun')){process.stderr.write('\\n‚ùå Use bun, not npm/yarn/pnpm.\\n Run: bun install\\n\\n');process.exit(1)}\"",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "audit:repo": "node scripts/audit/repo-audit.mjs",
    "audit:runtime": "node scripts/audit/runtime-audit.mjs",
    "audit:visual": "node scripts/audit/visual-audit.mjs",
    "audit:opsec": "node scripts/audit/opsec-audit.mjs",
    "audit:lexicon": "node scripts/audit/lexicon-audit.mjs",
    "audit:teardown": "node scripts/audit/teardown-audit.mjs",
    "audit:infra": "node scripts/audit/infra-audit.mjs",
    "audit": "bun run audit:repo && bun run audit:runtime",
    "audit:full": "bun run audit:repo && bun run audit:lexicon && bun run audit:opsec && bun run audit:teardown && bun run audit:infra && bun run audit:runtime && bun run audit:visual"
  },
  "dependencies": {
    "framer-motion": "^12.34.3",
    "lucide-react": "^0.575.0",
    "next": "14.2.35",
    "react": "^18",
    "react-dom": "^18",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
